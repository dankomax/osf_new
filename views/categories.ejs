
<header class="container-fluid fixed-top bg-white">
    <%- include('partials/header') %>

    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/<%= id %>"><%= id %></a></li>
            </ol>
        </nav>
    </div>
</header>   

<main class="container">
    <%- include('partials/login_modal') %>
    <%- include('partials/signup_modal') %>
    
    

    <% _.each(category.categories, function(C) { %>
        <% if (C.id === id) { %> 

            <% _.each(C.categories, function(subC) { %>
                <div class="card">
                    <div class="card-body">
                        <a href="../categories/<%= subC.id %>">
                            <h2><%= subC.name %></h2>
                        </a>
                        <h3><%= subC.page_title %></h3>
                        <% if (subC.image) { %>
                        <div>
                            <img src="/images/<%= subC.image %>">
                        </div>
                        <% } %>
                        <p><%= subC.page_description %></p>
                        <a class="btn btn-primary" href="../categories/<%= subC.id %>">View products</a>
                        
                   </div> 
                </div>  
                </br>
            <% }); %>   

        <% }; %> 
    <% }); %>         

    
     
</main>